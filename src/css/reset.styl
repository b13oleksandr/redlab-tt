body
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color #4a4a4a

*
  font-family Roboto, sans-serif
  box-sizing border-box
  padding 0
  margin 0

img
  max-width 100%
  max-height 100%

input
  color #4a4a4a
  font-family Roboto, sans-serif

input[type=text]
  outline none
  border none
  background transparent
  border-bottom 1px solid #fff
  height 30px
  padding 0
  color #fff
  width 100%
  max-width 100%
  &::placeholder
    color #f2f2f2
